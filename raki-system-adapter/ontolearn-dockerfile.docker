FROM dicegroup/raki-drill-endpoint:latest
COPY embeddings embeddings
COPY pre_trained_agents pre_trained_agents

RUN apt-get update && apt-get -y install openjdk-11-jre
COPY target/raki-system-adapter-*.jar systems.jar
COPY src/main/resources/drill-mapping.properties drill-mapping.properties

CMD java -cp systems.jar org.hobbit.core.run.ComponentStarter org.dice_group.raki.hobbit.systems.http.DRILLSystemAdapter
